<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/Receitas_Activity_Divisor_Inicial"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:background="@color/metas"
        app:layout_constraintBottom_toTopOf="@+id/Receitas_Activity_Mes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/Receitas_Activity_App_Title"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/Receitas_Activity_MainIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Receitas_Activity_MainIcon"
        app:layout_constraintTop_toTopOf="@+id/Receitas_Activity_MainIcon">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:text="@string/app_name"
                android:textColor="@color/metas"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Receitas_Activity_MainIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/DescricaoIconeApp"
                android:src="@drawable/main_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Receitas_Activity_Extrato_Container"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Receitas_Activity_Despesas_Container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Receitas_Activity_MainIcon"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/Receitas_Activity_Extrato_Icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_extrato"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Receitas_Activity_Despesas_Container"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/Receitas_Activity_Extrato_Container"
        app:layout_constraintEnd_toStartOf="@+id/Receitas_Activity_Receitas_Container"
        app:layout_constraintStart_toEndOf="@+id/Receitas_Activity_Extrato_Container"
        app:layout_constraintTop_toTopOf="@+id/Receitas_Activity_Extrato_Container">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/Receitas_Activity_Despesas_Icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_despesa"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Receitas_Activity_Receitas_Container"
        android:layout_width="150dp"
        android:layout_height="55dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/Receitas_Activity_Despesas_Container"
        app:layout_constraintEnd_toStartOf="@+id/Receitas_Activity_Metas_Container"
        app:layout_constraintStart_toEndOf="@+id/Receitas_Activity_Despesas_Container"
        app:layout_constraintTop_toTopOf="@+id/Receitas_Activity_Despesas_Container">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/Receitas_Activity_Receitas_Icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_receita"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/Receitas_Activity_Despesas_Texto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Receitas_Activity_Despesas_Texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Receitas"
                android:textColor="@color/receitas"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/Receitas_Activity_Receitas_Icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Receitas_Activity_Receitas_Icon"
                app:layout_constraintTop_toTopOf="@+id/Receitas_Activity_Receitas_Icon" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Receitas_Activity_Metas_Container"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/Receitas_Activity_Receitas_Container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Receitas_Activity_Receitas_Container"
        app:layout_constraintTop_toTopOf="@+id/Receitas_Activity_Receitas_Container">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/Receitas_Activity_Metas_Icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_meta"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Spinner
        android:id="@+id/Receitas_Activity_Mes"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Receitas_Activity_Ano"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Receitas_Activity_Extrato_Container"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/Receitas_Activity_Ano"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toBottomOf="@+id/Receitas_Activity_Mes"
        app:layout_constraintEnd_toStartOf="@id/Receitas_Activity_Botao_Filtro"
        app:layout_constraintStart_toEndOf="@+id/Receitas_Activity_Mes"
        app:layout_constraintTop_toTopOf="@+id/Receitas_Activity_Mes" />

    <androidx.cardview.widget.CardView
        android:id="@+id/Receitas_Activity_Botao_Filtro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:foregroundGravity="center"
        app:cardBackgroundColor="@color/receitas"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/Receitas_Activity_Ano"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Receitas_Activity_Ano"
        app:layout_constraintTop_toTopOf="@+id/Receitas_Activity_Ano">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Filtrar"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/Receitas_Activity_Divisor_Menu"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:background="@color/metas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Receitas_Activity_Mes"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/Receitas_Activity_Lista"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/Receitas_Activity_Divisor_Menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        tools:listitem="@layout/item_receita"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Receitas_Activity_FAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:backgroundTint="@color/receitas"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_adicionar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>